{
  "name": "pos-system",
  "private": true,
  "version": "0.0.1",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "node electron-start.js",
    "electron:build": "vue-tsc && vite build && electron-builder",
    "electron:preview": "vite preview",
    "build:preload": "tsc -p electron/tsconfig.json"
  },
  "dependencies": {
    "@material-design-icons/font": "^0.14.15",
    "@vuelidate/core": "^2.0.3",
    "@vuelidate/validators": "^2.0.4",
    "better-sqlite3": "^11.8.1",
    "chart.js": "^4.4.8",
    "date-fns": "^4.1.0",
    "express": "^4.21.2",
    "file-saver": "^2.0.5",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "papaparse": "^5.5.3",
    "pinia": "^2.1.7",
    "quagga": "^0.12.1",
    "vue": "^3.4.15",
    "vue-i18n": "^11.0.0-rc.1",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^20.17.27",
    "@vitejs/plugin-vue": "^5.0.3",
    "autoprefixer": "^10.4.17",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.8.2",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^1.8.27"
  },
  "build": {
    "appId": "com.pos.desktop",
    "productName": "POS System",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
